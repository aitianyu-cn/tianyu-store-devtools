{
    "name": "tianyu-store devtools",
    "description": "Dev tools extension for debugging state for Tianyu Store",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": ["activeTab", "tabs", "scripting", "webNavigation"],
    "devtools_page": "devtools.html",
    "action": {
        "default_title": "Tianyu Store Devtools",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "scripts/Background.js"
    },
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["scripts/RunScript.js"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "./scripts/ContentScript.js",
                "./scripts/RunScriptLoader.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "host_permissions": ["<all_urls>"]
}
